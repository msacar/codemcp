# Example project_structure configuration for codemcp.toml
# Add this section to your codemcp.toml to configure the project_overview tool

[project_structure]
# Enable or disable the tree view visualization
enable_tree_view = true

# Important directories to highlight in the overview
important_dirs = ["src/", "tests/", "docs/"]

# Main entry points to the application
entry_points = ["main.py", "app.py", "index.js"]

# Directories to ignore (these are in addition to default ignored dirs)
# Default ignored: .git, __pycache__, node_modules, .next, .venv, venv,
#                  dist, build, out, target, .idea, .vscode, coverage,
#                  .pytest_cache, .mypy_cache, .tox, htmlcov, *.egg-info
ignored_dirs = ["tmp/", "cache/", "logs/"]

# File extensions to include (empty means all extensions)
# Example: [".py", ".js", ".ts", ".jsx", ".tsx"]
allowed_extensions = []

# Show file counts in directory listings
show_file_counts = true

# Show file sizes (can make output verbose)
show_file_sizes = false
