# OpenGrok Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Comma-separated list of project paths to index
# Each path should be an absolute path to a Git repository
PROJECT_PATHS=/Users/mustafaacar/codemcp,/Users/mustafaacar/shortlink,/Users/mustafaacar/another-project

# Re-indexing interval in seconds (600 = 10 minutes)
REINDEX=600

# Number of indexer threads
INDEXER_THREADS=4

# JVM memory settings
JAVA_OPTS=-Xmx2g -Xms512m

# OpenGrok container name
CONTAINER_NAME=codemcp-opengrok

# Port to expose OpenGrok on
OPENGROK_PORT=8080
